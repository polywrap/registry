{
  "name": "@polywrap/registry",
  "description": "registry",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "typechain": "hardhat typechain",
    "build": "yarn run clean && yarn run compile && tsc",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "hardhat": "hardhat",
    "test": "hardhat test --show-stack-traces",
    "coverage": "yarn run build && hardhat coverage --temp artifacts --network hardhat",
    "fix": "yarn run fix:contracts && yarn run fix:ts",
    "fix:contracts": "prettier --write ./contracts/**/*.sol",
    "fix:ts": "eslint . --ext .ts --fix",
    "lint": "yarn run lint:contracts && yarn run lint:ts",
    "lint:contracts": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "lint:ts": "eslint . --ext .ts"
  },
  "files": [
    "contracts",
    "deployments/*/*.json",
    "deployments/*/.chainid",
    "dist/src/types",
    "dist/deploy/*.js"
  ],
  "dependencies": {
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "hardhat-gas-reporter": "^1.0.4",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "devDependencies": {
    "@ensdomains/ens-contracts": "^0.0.4",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@openzeppelin/contracts-upgradeable": "4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@openzeppelin/upgrades-core": "^1.5.1",
    "@polywrap/registry-test-utils": "^1.0.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.4.1",
    "hardhat-deploy": "^0.9.0",
    "ipfs-http-client": "^49.0.4",
    "logdown": "^3.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.4",
    "solhint": "^3.3.3",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  }
}
